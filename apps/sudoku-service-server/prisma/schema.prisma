datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  leaderboards Leaderboard[]
  password     String
  roles        Json
  sudokuGames  SudokuGame[]
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}

model Leaderboard {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  score     Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model SudokuGame {
  board       Json?
  createdAt   DateTime              @default(now())
  id          String                @id @default(cuid())
  solvedBoard Json?
  status      EnumSudokuGameStatus?
  updatedAt   DateTime              @updatedAt
  user        User?                 @relation(fields: [userId], references: [id])
  userId      String?
}

enum EnumSudokuGameStatus {
  Option1
}
