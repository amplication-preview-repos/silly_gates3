datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Record {
  createdAt DateTime @default(now())
  duration  Int?
  id        String   @id @default(cuid())
  score     Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Game {
  board     Json?
  createdAt DateTime  @default(now())
  endTime   DateTime?
  id        String    @id @default(cuid())
  startTime DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  games     Game[]
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  records   Record[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
